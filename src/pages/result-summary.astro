---
import Layout from '../layouts/Layout.astro'
import '@fontsource-variable/hanken-grotesk'
import data from '../mock/04-data.json'
import { Image } from 'astro:assets'

const COLORS = {
  Reaction: 'text-4-light-red bg-4-light-red/[0.07]',
  Memory: 'text-4-orangey-yellow bg-4-orangey-yellow/[0.07]',
  Verbal: 'text-4-green-teal bg-4-green-teal/[0.07]',
  Visual: 'text-4-cobalt-blue bg-4-cobalt-blue/[0.07]',
}
---

<Layout title='Result Summary'>
  <main
    class='bg-white font-medium min-h-dvh flex lg:justify-center lg:items-center lg:px-[15vw]'
  >
    <article class='font-hanken-grotesk flex flex-col w-full lg:flex-row lg:shadow-2xl lg:shadow-4-cobalt-blue/20 lg:text-lg lg:rounded-[32px] lg:max-w-[780px]'>
      <section
        class='h-[42%] lg:h-auto lg:w-[50%] bg-gradient-to-b from-4-light-slate-blue-bg to-4-light-royal-blue-bg text-4-light-lavender text-center rounded-b-[32px] lg:rounded-[32px] px-12 py-6 flex flex-col justify-between lg:px-[4.5rem] lg:py-10'
      >
        <h2 class='text-lg mb-2 lg:text-2xl'>Your Result</h2>
        <div
          class='size-32 lg:size-48 mb-4 rounded-full bg-gradient-to-t from-4-persian-blue-c to-4-violet-blue-c mx-auto flex flex-col justify-center items-center'
        >
          <p class='text-white text-[52px] lg:text-[72px] leading-tight lg:leading-[1.125] font-extrabold'>76</p>
          of 100
        </div>

        <p class='text-2xl lg:text-[32px] text-white font-bold lg:font-medium'>Great</p>
        <p class='mb-4'>
          You scored higher than 65% of the people who have taken these tests.
        </p>
      </section>
      <section
        class='grow flex flex-col justify-between font-extrabold text-4-dark-gray-blue px-8 py-6 lg:py-10 lg:px-10'
      >
        <h2 class='text-xl lg:text-2xl'>Summary</h2>
        <ul class='flex flex-col gap-2 lg:gap-4 justify-between grow my-6'>
          {
            data.map(item => (
              <li
                class={`${
                  COLORS[item.category as keyof typeof COLORS]
                } flex justify-between p-4 rounded-lg`}
              >
                <div class='flex gap-3 items-center'>
                  <Image
                    src={item.icon}
                    alt={`icon-${item.category}`}
                    width={20}
                    height={20}
                  />
                  {item.category}
                </div>
                <p class='text-4-dark-gray-blue'>
                  {item.score} <span class='text-gray-400'>/ 100</span>
                </p>
              </li>
            ))
          }
        </ul>
        <button
          class='w-full bg-4-dark-gray-blue text-4-pale-blue text-lg font-bold rounded-full py-4 relative group'
        >
          <div class="w-full h-full absolute top-0 left-0 opacity-0 transition-all duration-200 rounded-full bg-gradient-to-b from-4-light-slate-blue-bg to-4-light-royal-blue-bg group-hover:opacity-100"></div>
          <p class="relative z-10">Continue</p>
        </button>
      </section>
    </article>
  </main>
</Layout>
