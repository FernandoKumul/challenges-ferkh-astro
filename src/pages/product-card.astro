---
import Layout from '../layouts/Layout.astro'
import cartIcon from '@assets/icon-cart.svg'
import '@fontsource-variable/montserrat';
import '@fontsource-variable/fraunces';
---

<Layout title='Product Card'>
  <main class='min-h-dvh bg-5-cream flex justify-center items-center px-4 sm:px-24 md:px-32 lg:px-0'>
    <article class="font-montserrat text-sm bg-white rounded-xl lg:flex lg:w-[52%] lg:max-w-[570px]">
      <header class="lg:w-1/2">
        <picture>
          <source
            srcset='/image-product-mobile.jpg'
            media='(max-width:1023px)'
          />
          <img src='/image-product-desktop.jpg' class="rounded-t-xl lg:rounded-tr-none lg:rounded-l-xl lg:object-cover w-full lg:h-full" alt='product' />
        </picture>
      </header>
      
      <div class="p-6 text-5-dark-grayish-blue lg:p-8 lg:w-1/2 lg:flex lg:flex-col lg:justify-between">
        <h3 class="tracking-[0.2rem] text-x mb-2">PERFUME</h3>
        <h2 class="font-bold font-fraunces text-3xl mb-3 text-5-very-dark-blue">Gabrielle Essence Eau De Parfum</h2>
        <p class="mb-5">
          A floral, solar and voluptuous interpretation composed by Olivier
          Polge, Perfumer-Creator for the House of CHANEL.
        </p>
        <div class="flex gap-4 items-center mb-4">
          <p class="text-5-dark-cyan font-fraunces font-bold text-3xl">$149.99</p>
          <p class="line-through">$169.99</p>
        </div>
        <button class="bg-5-dark-cyan hover:bg-5-very-dark-blue text-white w-full text-center flex justify-center items-center gap-2 py-4 font-bold rounded-lg cursor-pointer">
          <img src={cartIcon.src} alt="cart-icon">
          Add to Cart</button>
      </div>
    </article>
  </main>
</Layout>
